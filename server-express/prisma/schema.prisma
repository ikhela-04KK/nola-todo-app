generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersTasks {
  singleTask String
  time       DateTime @db.Date
}

model Users {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  image    String
  nom      String
  password String
  tasks    UsersTasks[]
  rememberMe Boolean
}

model first_step {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  @@map("first-step")
}
